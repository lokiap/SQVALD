{% extends "base.html.twig" %}

{% block title %}SQVALD | Partenaires{% endblock %}

{% block style %}
	<style>
        .card-img-top {
            width: 100%;
            height: 20vw;
            object-fit: contain;
            padding: .5rem;
        }

		.row {
			margin-top: 1.5rem;
		}

		.showMember:hover {
			background-color: rgba(255,255,255,0.8);
		}

		.showPart:hover {
			background-color: rgb(9,116,110);
			border-color: rgb(9,116,110);
		}

		.card {
			border-width: .5px;
		}
	</style>
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-3">Découvrez nos partenaires</h1>
		{% for partner in partners %}
			{% if (loop.index-1)%3 == 0 %}
				<div class="row">
			{% endif %}
			<div class="col-4">
				<div class="card h-100 brd-secondary-light">
					<div>
						<img class="card-img-top img-fluid"
							 src="{{ vich_uploader_asset(partner, 'illustrationFile') }}"
							 alt="{{ partner.content }}">
					</div>
					<div class="card-body bgrd-secondary-light color-accent-light">
						<div class="d-flex h-100 flex-column justify-content-between">
							<p>{{ partner.content }}</p>
							<div>
								<a class="showPart btn btn-primary bgrd-primary-light brd-primary-light" href="{{ partner.btnUrl }}">Découvrir</a>
								<a href="{{ path('show_membre', {'partner' : partner.id}) }}" class="showMember btn float-end bgrd-accent-light text-black">Membres associés</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			{% if loop.index%3 == 0 or loop.last %}
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}
