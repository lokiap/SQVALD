{% extends "base.html.twig" %}

{% block title %}{{ event.title }}{% endblock %}

{% block body %}
	<div class="container pt-3">
		<div class="row">
			<div class="col-12">
				<div class="d-flex flex-row align-items-center justify-content-between">
					<h1>[{{ event.category }}] {{ event.title }}</h1>
					<p class="m-0">ajout√© le {{ event.createdAt|format_datetime(locale='fr',pattern='d MMM Y') }}</p>
				</div>
				<p class="m-0">Par :
					{% for author in event.author %}
						{% if loop.index != 1 %}
							{{ ', ' }}
						{% endif %}
						{{ author.getFullName }}
					{% endfor %}
				</p>
				<p>Du {{ event.dateBegin|format_datetime(locale='fr',pattern='d MMM Y') }} au {{ event.dateEnd|format_datetime(locale='fr',pattern='d MMM Y') }}</p>
				<p>Lieu : {{ event.place }}</p>
			</div>
		</div>
		<div class="row">
			<div class="col-12 py-4">
				{{ event.content|raw }}
			</div>
		</div>
	</div>
{% endblock %}
